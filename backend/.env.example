# Example backend environment file for development
# Copy this to backend/.env and replace placeholder values with real ones.

# PostgreSQL connection used by Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://lab448_admin:password@localhost:5432/lab448_database?schema=public"

# JWT secret used to sign tokens (change in production)
JWT_SECRET="change-this-secret"

# Port the backend server listens on
PORT=4000

# Aakash SMS (Nepal) - optional; leave empty to disable SMS notifications
# Get token from https://sms.aakashsms.com dashboard
AAKASH_SMS_AUTH_TOKEN=

# Optional: override default SMS messages (placeholders: {{qrToken}}, {{customerName}}, {{date}})
# SMS_INTAKE_MESSAGE=
# SMS_REPAIRED_MESSAGE=
# SMS_UNREPAIRABLE_MESSAGE=

